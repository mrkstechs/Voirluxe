/* Shop Page */
#content{
    width: 100%;
    margin-left: 0;
    margin-right: 0;
}
div#product-loop{
    display: grid;
    width: 100%;
    grid-template-columns: 50% 50%;
}
div#product-loop .product{
    margin: 0;
}
div#product-loop .product .icn{
    display: block !important;
    top: 0;
    right: 0;
    border-radius: 0;
}
div#product-loop .prod a{
    display: block;
    position: relative;
}
div#product-loop .prod a img{
    display: block;
    width: 100%;
}
div#product-loop .prod a .curtain{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    background-color: rgba(255,255,255, 0.75);
    box-shadow: inset 0px 0px 3px 0px #000;
    transition: all 0.7s ease;
}
div#product-loop .prod a:hover .curtain{
    opacity: 1;
}
.prod .product-details{
    transform: translateY(-10px);
    opacity: 0;
    transition: all 1s ease;
}
.prod .product-details.animate-desc{
    transform: translateY(0px);
    opacity: 1;
}
.prod .product-details h3,
.prod .product-details span{
    font-family: 'Nexa';
    text-transform: uppercase;
}
@media only screen and (min-width: 600px){
    div#product-loop{
        grid-template-columns: 33.33% 33.33% 33.33%;
    }
}
@media only screen and (min-width: 768px){
    div#product-loop{
        grid-template-columns: 25% 25% 25% 25%;
    }
}